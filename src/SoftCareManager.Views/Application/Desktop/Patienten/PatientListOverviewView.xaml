<UserControl x:Class="SoftCareManager.Views.Application.Desktop.PatientListOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:selection="clr-namespace:SoftCareManager.Common.UI.Groups.Selection;assembly=SoftCareManager.Common.UI"
             xmlns:items="clr-namespace:SoftCareManager.Common.UI.Groups.Items;assembly=SoftCareManager.Common.UI"
             xmlns:groups="clr-namespace:SoftCareManager.Contracts.General;assembly=SoftCareManager.Contracts"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Margin="10,10"
             selection:SelectionGroupManager.SelectionGroupSource="{selection:SelectionGroupSource GroupName={x:Static groups:Groups.PatientListSelectionGroupName}}"
             items:ItemsGroupManager.ItemsGroupSource="{items:ItemsGroupSource GroupName={x:Static groups:Groups.PatientListItemsGroupName}}">
    <Grid>
        <ListView ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  IsSynchronizedWithCurrentItem="True">
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FirstName}"
                                    Header="First Name" Width="100" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=LastName}"
                                    Header="Last Name" Width="100" />
                    <GridViewColumn DisplayMemberBinding="{Binding Birthday}"
                                    Header="Birthday" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>